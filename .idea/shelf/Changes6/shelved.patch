+package com.example.customviewcookbook.features.components.banner.dropdown
+
+import android.content.Context
+import android.util.AttributeSet
+import android.view.LayoutInflater
+import android.view.View
+import android.widget.FrameLayout
+import androidx.recyclerview.widget.LinearLayoutManager
+import com.example.customviewcookbook.databinding.ViewCustomDropdownBinding
+
+internal class CustomDropdownView @JvmOverloads constructor(
+    context: Context,
+    attrs: AttributeSet? = null,
+    defStyleAttr: Int = 0
+) : FrameLayout(context, attrs, defStyleAttr) {
+
+    private var binding: ViewCustomDropdownBinding
+    private var items: List<String> = emptyList()
+    private var selectedPosition: Int = -1
+    private var onItemSelectedListener: ((position: Int, item: String) -> Unit)? = null
+    
+    private var isExpanded = false
+
+    init {
+        binding = ViewCustomDropdownBinding.inflate(LayoutInflater.from(context), this, true)
+        setupViews()
+    }
+
+    private fun setupViews() {
+        binding.dropdownHeader.setOnClickListener {
+            toggleDropdown()
+        }
+        
+        binding.dropdownRecyclerView.layoutManager = LinearLayoutManager(context)
+        binding.dropdownRecyclerView.visibility = View.GONE
+    }
+
+    private fun toggleDropdown() {
+        isExpanded = !isExpanded
+        
+        if (isExpanded) {
+            expandDropdown()
+        } else {
+            collapseDropdown()
+        }
+    }
+
+    private fun expandDropdown() {
+        binding.dropdownRecyclerView.visibility = View.VISIBLE
+        // Anima a rotação do ícone de seta
+        binding.dropdownArrow.animate()
+            .rotation(180f)
+            .setDuration(300)
+            .start()
+    }
+
+    private fun collapseDropdown() {
+        binding.dropdownRecyclerView.visibility = View.GONE
+        binding.dropdownArrow.animate()
+            .rotation(0f)
+            .setDuration(300)
+            .start()
+    }
+
+    fun setItems(items: List<String>) {
+        this.items = items
+        val adapter = DropdownAdapter(items) { position, item ->
+            selectItem(position, item)
+        }
+        binding.dropdownRecyclerView.adapter = adapter
+    }
+
+    private fun selectItem(position: Int, item: String) {
+        selectedPosition = position
+        binding.dropdownSelectedText.text = item
+        collapseDropdown()
+        onItemSelectedListener?.invoke(position, item)
+    }
+
+    fun setOnItemSelectedListener(listener: (position: Int, item: String) -> Unit) {
+        onItemSelectedListener = listener
+    }
+
+    fun getSelectedItem(): String? {
+        return if (selectedPosition >= 0) items[selectedPosition] else null
+    }
+}
