<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".features.animation.AnimationActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/footer_boom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_ripple"
            android:stateListAnimator="@animator/button_press_scale"
            android:text="Aqui tem Boom em!"
            android:textAllCaps="false"
            android:textColor="@color/btn_boom_text_color"
            app:backgroundTint="@color/btn_boom_bg_tint" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/footer_simple_vibration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_button_ripple"
            android:stateListAnimator="@animator/btn_click_elevation"
            android:text="Aqui vibra leve em!"
            android:textAllCaps="false"
            android:textColor="@color/btn_boom_text_color"
            app:backgroundTint="@color/btn_boom_bg_tint" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/footer_hard_vibration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_button_ripple"
            android:stateListAnimator="@animator/btn_click_elevation"
            android:text="Aqui vibra muito forte em!"
            android:textAllCaps="false"
            android:textColor="@color/btn_boom_text_color"
            app:backgroundTint="@color/btn_boom_bg_tint" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/footer_sound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_button_ripple"
            android:stateListAnimator="@animator/btn_click_elevation"
            android:text="Aqui tem Som em!"
            android:textAllCaps="false"
            android:textColor="@color/btn_boom_text_color"
            app:backgroundTint="@color/btn_boom_bg_tint" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/footer_rotate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_button_ripple"
            android:text="Aqui to Virando em!"
            android:textAllCaps="false"
            app:backgroundTint="@color/btn_boom_bg_tint"
            android:textColor="@color/btn_boom_text_color" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>