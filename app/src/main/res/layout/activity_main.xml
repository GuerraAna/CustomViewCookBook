<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/main"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/gray"
	tools:context=".MainActivity">

	<com.example.customviewcookbook.banner.BannerHighlightView
		android:id="@+id/bannerHighlight"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="16dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:description="Descrição detalhada do banner highlight"
		tools:icon="@android:drawable/ic_dialog_info"
		tools:isError="false"
		tools:title="Título do Banner" />

</androidx.constraintlayout.widget.ConstraintLayout>
