<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/cardContainer"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	app:cardBackgroundColor="@color/white"
	app:cardCornerRadius="8dp"
	app:cardElevation="2dp"
	app:strokeWidth="2dp"
	tools:strokeColor="@color/red">

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<androidx.appcompat.widget.LinearLayoutCompat
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:padding="16dp">

			<androidx.appcompat.widget.AppCompatImageView
				android:id="@+id/icon"
				android:layout_width="24dp"
				android:layout_height="24dp"
				android:layout_gravity="center_vertical"
				android:layout_marginEnd="12dp"
				android:contentDescription="ícone destaque"
				android:scaleType="centerInside"
				android:visibility="visible"
				tools:srcCompat="@android:drawable/ic_dialog_info"
				tools:tint="@color/red" />

			<androidx.appcompat.widget.LinearLayoutCompat
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:orientation="vertical">

				<androidx.appcompat.widget.AppCompatTextView
					android:id="@+id/title"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textColor="@color/title"
					android:textSize="16sp"
					android:textStyle="bold"
					tools:text="Título do Banner" />

				<androidx.appcompat.widget.AppCompatTextView
					android:id="@+id/description"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="4dp"
					android:textColor="@color/subtitle"
					android:textSize="14sp"
					tools:text="Descrição detalhada do banner highlight" />

			</androidx.appcompat.widget.LinearLayoutCompat>
		</androidx.appcompat.widget.LinearLayoutCompat>

		<androidx.appcompat.widget.AppCompatButton
			android:id="@+id/close_button"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_gravity="end"
			android:background="?attr/selectableItemBackgroundBorderless"
			android:contentDescription="close_banner"
			android:drawableStart="@drawable/ic_close"
			android:drawablePadding="0dp"
			android:gravity="center"
			android:includeFontPadding="false"
			android:padding="8dp"
			android:text=""
			android:visibility="gone"
			tools:visibility="visible" />

	</FrameLayout>
</com.google.android.material.card.MaterialCardView>
