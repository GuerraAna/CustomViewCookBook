<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/cardContainer"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	app:cardBackgroundColor="@color/white"
	app:cardCornerRadius="8dp"
	app:cardElevation="2dp"
	app:strokeWidth="2dp"
	tools:strokeColor="@color/red">

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<androidx.appcompat.widget.LinearLayoutCompat
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:padding="16dp">

			<com.google.android.material.progressindicator.CircularProgressIndicator
				android:id="@+id/progress_indicator"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:indicatorSize="24dp"
				android:layout_gravity="center"
				android:layout_marginEnd="8dp"
				android:indeterminate="true"
				android:visibility="gone"
				app:indicatorColor="@array/progress_colors"
				app:indeterminateAnimationType="contiguous"
				tools:visibility="gone" />

			<androidx.appcompat.widget.AppCompatImageView
				android:id="@+id/icon"
				android:layout_width="24dp"
				android:layout_height="24dp"
				android:layout_gravity="center_vertical"
				android:layout_marginEnd="12dp"
				android:importantForAccessibility="yes"
				android:scaleType="centerInside"
				android:visibility="gone"
				tools:srcCompat="@drawable/ic_close"
				tools:tint="@color/red"
				tools:visibility="visible" />

			<androidx.appcompat.widget.LinearLayoutCompat
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:orientation="vertical">

				<androidx.appcompat.widget.AppCompatTextView
					android:id="@+id/title"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:importantForAccessibility="yes"
					android:textColor="@color/black"
					android:textSize="16sp"
					android:textStyle="bold"
					tools:text="TÃ­tulo do Banner" />

				<androidx.appcompat.widget.AppCompatTextView
					android:id="@+id/description"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="4dp"
					android:importantForAccessibility="yes"
					android:textColor="@color/dark_gray"
					android:textSize="14sp"
					tools:text="Dolores perferendis laboriosam deleniti est illo rerum alias. Facere voluptate dolorum eum ut itaque repudiandae. Atque nam aut totam. Consequatur tempora sit autem rem id qui iusto. Qui ut nostrum voluptas quis." />

			</androidx.appcompat.widget.LinearLayoutCompat>
		</androidx.appcompat.widget.LinearLayoutCompat>

		<androidx.appcompat.widget.AppCompatButton
			android:id="@+id/close_button"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_gravity="end"
			android:background="?attr/selectableItemBackgroundBorderless"
			android:drawableStart="@drawable/ic_close"
			android:drawablePadding="0dp"
			android:gravity="center"
			android:importantForAccessibility="yes"
			android:includeFontPadding="false"
			android:padding="8dp"
			android:text=""
			android:visibility="gone"
			tools:visibility="visible" />

	</FrameLayout>
</com.google.android.material.card.MaterialCardView>
